<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sembradores</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container nav-container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/home/Landing" class="navbar-brand">
                    <img id="nav-logo" src="~/Content/img/LOGO.png" />
                </a>
               
            </div>
            <div class="navbar-collapse collapse">
                <ul id="nav-list" class="nav navbar-nav">
                    <li><i class="fa fa-desktop" aria-hidden="true"></i> @Html.ActionLink("Dashboard", "Index", "Home")</li>
                    
                    <li><i class="fa fa-handshake-o" aria-hidden="true"></i> @Html.ActionLink("Transferencia", "Transferencia", "Home")</li>
                    <li><i class="fa fa-money" aria-hidden="true"></i> @Html.ActionLink("Historial", "Historial", "Home")</li>
                    <li><i class="fa fa-cog" aria-hidden="true"></i> @Html.ActionLink("Ajustes", "Ajustes", "Home")</li>

                    <li>
                        <button type="button" class="btn btn-danger btn-logout"><i class="fa fa-power-off" aria-hidden="true"></i> Salir</button>
                    </li>
                    <li>
                        <button type="button" class="btn btn-success btn-login"><i class="fa fa-user-circle-o" aria-hidden="true"></i> Iniciar Sesión</button>
                    </li>
                </ul>

             
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sembradores</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
